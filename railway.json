{
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": ["src/**/*", "frontend/**/*", "package.json"],
    "buildCommand": "npm run build",
    "nixpacksConfigPath": "nixpacks.toml"
  },
  "deploy": {
    "startCommand": "npm pm2 start dist/index.js 'max'",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 5
  }
}
