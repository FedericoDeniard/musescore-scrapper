{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node", // Esto es para que resuelva los módulos de forma estándar
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noEmit": true, // Si usas Vite, Webpack, etc. no necesitas emitir los archivos directamente desde TS
    "strict": true
  },
  "include": ["src"]
}
